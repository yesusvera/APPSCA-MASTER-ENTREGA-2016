<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <!-- CONTAINER GERAL -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/layout_questao">

        <!-- TITULO -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_titulo_questao">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Questão 08"
                android:textColor="@android:color/white"
                android:textSize="40dp"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- QUESTAO -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textAppearance="@style/style_questao"
                android:text="Você tem acesso à informação por quais meios? [ler alternativas]"/>

        </LinearLayout>

        <!-- TABULACAO DAS OPCOES -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingBottom="10dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Televisão"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_a"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rádio"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_b"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rádio Comunitária"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_c"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rádio amador"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_d" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internet"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_e" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone celular"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_f" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone Fixo"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_g" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone público (orelhão)"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_h" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone rural"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_i" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sindicato"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_j" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Associação"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_k" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sistema de Som (carro, moto, bicicleta)"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_l" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sistema público de Som"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_m" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Material impresso (jornal, revista, jornal comunitário)"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_n" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>