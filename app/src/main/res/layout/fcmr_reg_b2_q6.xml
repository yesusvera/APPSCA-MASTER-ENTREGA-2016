<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <!-- CONTAINER GERAL -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/layout_questao">

        <!-- TITULO -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_titulo_questao">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Questão 06"
                android:textColor="@android:color/white"
                android:textSize="40dp"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- QUESTAO -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textAppearance="@style/style_questao"
                android:text="Você já acessou algum programa de crédito ou incentivo à produção oferecido pelo governo?"/>

        </LinearLayout>

        <!-- RESPOSTA + TABULACAO DAS OPCOES -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sim"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/sim"
                android:checked="false"
                android:paddingRight="15dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Não"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/nao"
                android:checked="false"
                android:paddingRight="15dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Não se aplica"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/nao_se_aplica"
                android:checked="false"
                android:paddingRight="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textAppearance="@style/style_questao"
                android:text="Se sim, qual? (Pode haver mais de uma resposta)"/>

        </LinearLayout>

        <!-- TABULACAO DAS OPCOES -->
        <TableLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_vertical"
            android:stretchColumns="0,1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/style_questao"
                    android:paddingBottom="5dp"
                    android:text="PROGRAMA"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/style_questao"
                    android:paddingBottom="5dp"
                    android:text="VALOR"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pronaf"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_a1"
                    android:checked="false" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/opcao_a1_edit_text" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pronaf Mulher"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_b1"
                    android:checked="false" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/opcao_b1_edit_text" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crédito Amigo"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_c1"
                    android:checked="false" />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/opcao_c1_edit_text" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAA"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_d1" />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/opcao_d1_edit_text" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PNAE"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_e1" />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/opcao_e1_edit_text" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <CheckBox
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Política de Garantia de Preços Mínimos para Produtos da Sociobiodiversidade – PGPMBio"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_f1"
                    android:checked="false" />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:id="@+id/opcao_f1_edit_text" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Programa de Organização Produtiva de Mulheres Rurais – POPMR"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_g1" />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/opcao_g1_edit_text" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Outros. Quais?"
                    android:textAppearance="@style/style_resposta"
                    android:id="@+id/opcao_h1" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/opcao_h1_edit_text" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textAppearance="@style/style_questao"
                android:text="Se você já acessou algum tipo de crédito / financiamento, foi para qual finalidade?"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compra de material de pesca"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_a2"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compra de embarcação"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_b2"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beneficiamento de pescado"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_c2"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produção agrícola"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_d2"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Criação de animais"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_e2"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pequenos empreendimentos"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_f2"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artesanato"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_g2"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beneficiamento de produtos extrativistas"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_h2"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outros. Quais?"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_i2"
                android:checked="false" />

            <EditText
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:id="@+id/outro2"
                android:textAppearance="@style/style_resposta"
                android:lines="2" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textAppearance="@style/style_questao"
                android:text="Se você já acessou algum tipo de crédito / financiamento, foi através de qual instituição?"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banco da Amazônia"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_a3"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banco do Nordeste"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_b3"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caixa Econômica"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_c3"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banco do Pará"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_d3"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banco do Brasil"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_e3"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outro. Qual?"
                android:textAppearance="@style/style_resposta"
                android:id="@+id/opcao_f3"
                android:checked="false" />

            <EditText
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:id="@+id/outro3"
                android:textAppearance="@style/style_resposta"
                android:lines="2" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>